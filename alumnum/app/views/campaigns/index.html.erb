<div class="index-body">
  <div class="campaign-search-bar">
    <%= form_tag(campaigns_path, :method => "get") do %>
    <%= text_field_tag :search, params[:search], placeholder: "   Search Campaigns", :class => "search box"%>
    <%= submit_tag "Search", :name => nil, :class =>"search button" %>
    <% end %>
  </div>
  <% if @campaign_search.present? %>
    <% if params[:search] != nil %>
      <%= render @campaign_search %>
    <% elsif params[:query].present? && @campaign_search.blank? %>
      <p>There are no posts containing the term(s) <%= params[:search] %>.</p> 
    <% end %>
  <% end %>
</div>

